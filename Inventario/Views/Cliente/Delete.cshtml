@model Inventario.Models.Cliente

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Eliminar cliente</h4>

<div class="row">
    <div class="col s6">
        <hr />
        <h5>Are you sure you want to delete this?</h5>
        <div class="card">
            <div class="card-image waves-effect waves-block waves-light">
                <img class="activator" src="~/images/icono2.png">
            </div>
            <div class="card-content">
                <span class="card-title activator grey-text text-darken-4">@Html.DisplayFor(model => model.Name) @Html.DisplayFor(model => model.LastName)<i class="material-icons right">more_vert</i></span>

                <p><a> @Html.DisplayFor(model => model.Email)</a></p>
            </div>
            <div class="card-reveal">
                <span class="card-title grey-text text-darken-4">@Html.DisplayFor(model => model.Name) @Html.DisplayFor(model => model.LastName)<i class="material-icons right">close</i></span>
                <p><b>@Html.DisplayNameFor(model => model.IdentificationCard):</b> @Html.DisplayFor(model => model.IdentificationCard)</p>
                <p><b>@Html.DisplayNameFor(model => model.PhoneNumber):</b> @Html.DisplayFor(model => model.PhoneNumber)</p>
                <p><b>@Html.DisplayNameFor(model => model.Address):</b> @Html.DisplayFor(model => model.Address)</p>
                <p><b>@Html.DisplayNameFor(model => model.Email):</b> @Html.DisplayFor(model => model.Email)</p>
            </div>

            <div class="card-action">
                <form asp-action="Delete" id="myForm">
                    <div class="row">
                        <input type="hidden" asp-for="ClienteId" />
                        <a href="#" onclick="document.getElementById('myForm').submit();" class="nounderline btn-flat">Eliminar</a>
                        <a asp-action="List" class="nounderline btn-flat"> Atras</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>