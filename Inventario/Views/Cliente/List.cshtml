@model ClienteViewModel
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="header">Lista de clientes</h4>

<div class="panel panel-default col s12">
    <!-- Default panel contents -->
    <div class="panel-heading">Panel de clientes</div>
    <table class="table highlight responsive-table" id="clTbl">
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Apellido
                </th>
                <th>
                    Cedula
                </th>
                <th>
                    Telefono
                </th>
                <th>
                    Direccion
                </th>
                <th>
                    Email
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Clientes)
            {
                <tr>
                    <td>
                        <br>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <br>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        <br>
                        @Html.DisplayFor(modelItem => item.IdentificationCard)
                    </td>
                    <td>
                        <br>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        <br>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        <br>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn-floating btn-small waves-effect waves-light #26a69a"><i class="material-icons">edit</i></a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn-floating btn-small waves-effect waves-light red"><i class="material-icons">delete</i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
</div>

<p>
    <a asp-action="Index" class="btn-floating btn-small waves-effect waves-light blue"><i class="material-icons">person_add</i></a>
</p>
