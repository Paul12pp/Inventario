@model Producto

<h4 class="collection-header">Agregar producto</h4>

<div class="row">
    <form asp-action="Create" method="post" class="col-s6" role="form" id="formulario">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-field col s6">
                <input asp-for="Name" class="validate" />
                <label asp-for="Name">Nombre</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input asp-for="ShortDescription" class="validate" />
                <label asp-for="ShortDescription">Descripcion breve</label>
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <textarea asp-for="LongDescription" id="textarea1" class="materialize-textarea"></textarea>
                <label asp-for="LongDescription">Descripcion larga</label>
                <span asp-validation-for="LongDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s3">
                <input asp-for="Cantidad" class="validate" />
                <label asp-for="Cantidad">Cantidad</label>
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="input-field col s3">
                <input asp-for="Price" class="validate" />
                <label asp-for="Price">Precio</label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col s6">
                <label asp-for="ProveedorId">Id de proveedor</label>
                @Html.DropDownList("ProveedorId", new SelectList(ViewBag.ProveedorId, "ProveedorId", "Name"), "-- Select Proveedor --")
                <span asp-validation-for="ProveedorId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
            <a asp-action="List" class="btn btn-default">Back to List</a>
        </div>
    </form>
</div>


