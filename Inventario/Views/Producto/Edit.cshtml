@model Producto

@{
    ViewData["Title"] = "Edit";

}

<h4 class="header">Editar productos</h4>

<div class="row">
    <form asp-action="Edit" method="post" class="col-s6" role="form" id="formulario">
        <input type="hidden" asp-for="ProductoId" />
        <div class="row">
            <div class="input-field col s6">
                <input asp-for="Name" class="validate" />
                <label asp-for="Name">Nombre</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input asp-for="ShortDescription" class="validate" />
                <label asp-for="ShortDescription">Descripcion corta</label>
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input asp-for="LongDescription" class="validate" placeholder="Escriba la cedula sin '-'" data-length="12" />
                <label asp-for="LongDescription">Descripcion larga</label>
                <span asp-validation-for="LongDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s3">
                <input asp-for="Cantidad" class="validate" />
                <label asp-for="Cantidad">Cantidad</label>
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="input-field col s3">
                <input asp-for="Price" class="validate" />
                <label asp-for="Price">Precio</label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col s6">
                <label asp-for="ProveedorId" class="control-label"> Id de proveedor</label>
                @Html.DropDownList("ProveedorId", new SelectList(ViewBag.ProveedorId, "ProveedorId", "Name"), "-- Select Proveedor --")
                <span asp-validation-for="ProveedorId" class="text-danger"></span>
            </div>
         </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-5">
                    <input type="submit" class="btn btn-primary" value="Save" />
                    <a asp-action="List" class="btn btn-primary">Back to List</a>
                </div>
            </div>
    </form>
</div>
