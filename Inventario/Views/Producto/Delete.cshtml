@model Producto

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Eliminar producto</h4>

<div class="row">
    <div class="col s6">
        <hr />
        <h5>Are you sure you want to delete this?</h5>
        <div class="card">
            <div class="card-image waves-effect waves-block waves-light">
                <img class="activator" src="~/images/icono2.png">
            </div>
            <div class="card-content">
                <span class="card-title activator grey-text text-darken-4">@Html.DisplayFor(model => model.Name)<i class="material-icons right">more_vert</i></span>

                <p><a></a></p>
            </div>
            <div class="card-reveal">
                <span class="card-title grey-text text-darken-4">@Html.DisplayFor(model => model.Name) <i class="material-icons right">close</i></span>
                <p><b>@Html.DisplayNameFor(model => model.ShortDescription):</b> @Html.DisplayFor(model => model.ShortDescription)</p>
                <p><b>@Html.DisplayNameFor(model => model.LongDescription):</b> @Html.DisplayFor(model => model.LongDescription)</p>
                <p><b>@Html.DisplayNameFor(model => model.Cantidad):</b> @Html.DisplayFor(model => model.Cantidad)</p>
                <p><b>@Html.DisplayNameFor(model => model.Price):</b> @Html.DisplayFor(model => model.Price)</p>
                <p><b>@Html.DisplayNameFor(model => model.ProveedorId):</b> @Html.DisplayFor(model => model.ProveedorId)</p>
            </div>

            <div class="card-action">
                <form asp-action="Delete" id="myForm">
                    <div class="row">
                        <input type="hidden" asp-for="ProductoId" />
                        <a href="#" onclick="document.getElementById('myForm').submit();" class="nounderline btn-flat">Eliminar</a>
                        <a asp-action="List" class="nounderline btn-flat"> Atras</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>